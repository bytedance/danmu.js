{
  "name": "danmu.js",
  "version": "1.2.0",
  "type": "module",
  "description": "HTML5 danmu (danmaku) plugin for any DOM element",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "browser"
  ],
  "unpkgFiles": [
    "dist",
    "browser"
  ],
  "scripts": {
    "prepare": "npm run build",
    "dev": "rslib build --watch",
    "build": "rslib build",
    "serve": "serve ./",
    "lint": "eslint src/**/*.js --fix",
    "release": "npm run lint && npm run build && npm publish",
    "release:rc": "npm run release --tag rc"
  },
  "keywords": [
    "danmu",
    "danmaku",
    "弹幕",
    "bullet screen",
    "barrage",
    "live commenting",
    "HTML5"
  ],
  "dependencies": {
    "event-emitter": "^0.3.5"
  },
  "devDependencies": {
    "@rsbuild/plugin-sass": "^1.4.0",
    "@rslib/core": "^0.16.1",
    "css-loader": "^7.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^7.32.0",
    "sass": "^1.54.0",
    "sass-loader": "^16.0.5",
    "serve": "^14.2.1",
    "style-loader": "^4.0.0",
    "yargs": "^17.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytedance/danmu.js.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "zhangxin.frontend@bytedance.com",
  "license": "MIT"
}
